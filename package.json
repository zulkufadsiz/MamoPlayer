{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "docs"
  ],
  "scripts": {
    "commitlint": "commitlint --edit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "licenses:list": "ts-node --skipProject --compiler-options '{\"module\":\"commonjs\",\"moduleResolution\":\"node\"}' tools/list-licenses.ts || npx --yes tsx tools/list-licenses.ts",
    "test:packages": "yarn workspace @mamoplayer/core test && yarn workspace @mamoplayer/pro test",
    "build:core": "yarn workspace @mamoplayer/core build",
    "build:pro": "yarn workspace @mamoplayer/pro build",
    "build": "yarn build:core && yarn build:pro",
    "docs:dev": "npm run start --workspace docs",
    "docs:build": "npm run build --workspace docs",
    "docs:serve": "npm run serve --workspace docs",
    "docs:deploy": "npm run deploy --workspace docs"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.3",
    "@react-native-community/cli": "^20.1.1",
    "@testing-library/react-native": "^13.3.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^10.0.1",
    "prettier": "^3.6.2",
    "react-test-renderer": "19.1.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "react": "19.1.1",
    "react-native": "0.81.6"
  }
}
