{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "commitlint": "commitlint --edit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:packages": "yarn workspace packages/core test && yarn workspace packages/pro test",
    "build:core": "yarn workspace packages/core build",
    "build:pro": "yarn workspace packages/pro build",
    "build": "yarn build:core && yarn build:pro"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^10.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
